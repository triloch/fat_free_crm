%header.main-header
  %a.logo
    %span.logo-mini
      %b F
      F
    %span.logo-lg
      %b FF
      CRM
  %nav.navbar.navbar-static-top
    - if current_user
      %a.sidebar-toggle{:'data-toggle' => 'offcanvas', :role => 'button'}
        %span.sr-only Toggle navigation
      .navbar-custom-menu
        %ul.nav.navbar-nav
          %li= link_to(t(:quick_find), "#", :id => "jumper")
          %li= link_to(t(:profile), profile_path)
          - if current_user.admin?
            %li= link_to(t(:admin), admin_path)
          %li= link_to(t(:logout), logout_path, :method => :delete)
          %li= render '/layouts/jumpbox'
    - else
      .navbar-custom-menu
        %ul.nav.navbar-nav
          %li= link_to(t(:login), login_path)
